<resources>

    <!-- Base application theme. -->
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <!-- Customize your theme here. -->
        <item name="background">@android:color/black</item>
        <item name="titleTextStyle">@style/MyAppActionBarTitleText</item>
      </style>

     <style name="MyAppActionBarTitleText" parent="@android:style/TextAppearance">
         <item name="android:textColor">@android:color/white</item>
         <item name="android:textSize">20sp</item>
     </style>

    <style name="MyAppActionBarOverFlowMenu" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/baseline_more_vert_24</item>
    </style>

</resources>

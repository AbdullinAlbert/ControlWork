<resources>

    <!-- Base application theme. -->
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <!-- Customize your theme here. -->
        <item name="background">@android:color/black</item>
        <item name="titleTextStyle">@style/MyAppActionBarTitleText</item>
      </style>

     <style name="MyAppActionBarTitleText" parent="@android:style/TextAppearance">
         <item name="android:textColor">@android:color/white</item>
         <item name="android:textSize">20sp</item>
     </style>

    <style name="MyAppActionBarOverFlowMenu" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/standardWhite</item>
    </style>

    <style name="ThemeMaterialCalendar" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/standardBlack</item>
    </style>

    <style name="ThemeMaterialCalendar.FullScreen" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="colorPrimary">@color/standardBlack</item>
    </style>

    <style name="MySecondAppActionBarOverFlowMenu" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/standardBlack</item>
    </style>

    <style name="DialogToolbarTextSize" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?android:attr/buttonBarStyle"
    >

    <EditText
        android:id="@+id/UpdateDataDFText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        android:hint="@string/default_text"
        android:backgroundTint="@android:color/black"
        android:maxLength="30"/>

    <TextView
        android:id="@+id/UpdateDataDFHelper_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="0 / 30"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/UpdateDataDFCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_cancel"
            style="?android:attr/buttonBarButtonStyle"
            />

        <Button
            android:id="@+id/UpdateDataDAddButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_add_data"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>


</LinearLayout>
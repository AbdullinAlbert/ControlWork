<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search_criteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:id="@+id/add_certain_criteria_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/employee_with_colon" />

            <EditText
                android:id="@+id/select_empl_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_for_search_criteria"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:focusable="false"
                android:backgroundTint="@color/standardBlack" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/firm_with_colon" />

            <EditText
                android:id="@+id/select_firm_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_for_search_criteria"
                android:inputType="textPersonName"
                android:importantForAutofill="no"
                android:focusable="false"
                android:backgroundTint="@color/standardBlack"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/place_of_work_with_colon" />

            <EditText
                android:id="@+id/select_placeOfWork_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_for_search_criteria"
                android:inputType="textPersonName"
                android:importantForAutofill="no"
                android:focusable="false"
                android:backgroundTint="@color/standardBlack" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/type_of_work_with_colon" />

            <EditText
                android:id="@+id/select_typeOfWork_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_for_search_criteria"
                android:inputType="textPersonName"
                android:importantForAutofill="no"
                android:focusable="false"
                android:backgroundTint="@color/standardBlack" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/date_with_colon"
                android:labelFor="@id/add_date_editText"/>

            <EditText
                android:id="@+id/add_criteria_for_data_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="32"
                android:hint="@string/hint_for_search_criteria"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/standardBlack"
                android:focusable="false" />

            <Button
                android:id="@+id/addCriteriaForDateButton"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:padding="0dp"
                android:textSize="8sp"
                android:text="@string/add"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/colorPrimary"
                style="?android:attr/borderlessButtonStyle" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/result_with_colon"
                android:labelFor="@id/add_result_editText"/>

            <EditText
                android:id="@+id/add_criteria_for_result_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="32"
                android:hint="@string/hint_for_search_criteria"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/standardBlack"
                android:focusable="false" />

            <Button
                android:id="@+id/addCriteriaForNumberButton"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:padding="0dp"
                android:textSize="8sp"
                android:text="@string/add"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/colorPrimary"
                style="?android:attr/borderlessButtonStyle" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/note_with_colon" />

            <EditText
                android:id="@+id/add_criteria_for_note_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_for_search_criteria"
                android:inputType="textPersonName"
                android:importantForAutofill="no"
                android:maxLength="30"
                android:backgroundTint="@color/standardBlack"
                android:focusable="false"/>

            <Button
                android:id="@+id/addCriteriaForNoteButton"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:padding="0dp"
                android:textSize="8sp"
                android:text="@string/add"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/colorPrimary"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/colorPrimary"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
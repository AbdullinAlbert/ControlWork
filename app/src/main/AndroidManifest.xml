<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.albertabdullin.controlwork">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ListOfDBItemsActivity"
            android:windowSoftInputMode="stateUnchanged"
            android:parentActivityName="com.albertabdullin.controlwork.activities.FillNewData_Activity">
        </activity>
        <activity
            android:name=".activities.FillNewData_Activity"
            android:label="Добавьте результат работы"
            android:parentActivityName="com.albertabdullin.controlwork.activities.MainActivity"
            />
        <activity
            android:name=".activities.EditDeleteDataActivity"
            android:label="Критерии поиска"
            android:theme="@style/SecondAppTheme"
            android:parentActivityName="com.albertabdullin.controlwork.activities.MainActivity"
            />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
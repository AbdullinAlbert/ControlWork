<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.albertabdullin.controlwork">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ListOfDBItemsActivity"
            android:windowSoftInputMode="stateUnchanged"
            android:parentActivityName=".activities.FillNewData_Activity">
        </activity>
        <activity
            android:name=".activities.FillNewData_Activity"
            android:label="@string/add_work_results"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.EditDeleteDataActivity"
            android:label="@string/search_results"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.MakerSearchCriteriaActivity"
            />
        <activity
            android:name=".activities.MakerSearchCriteriaActivity"
            android:label="@string/search_criteria"
            android:theme="@style/SecondAppTheme"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.ReportActivity"
            android:label="@string/search_criteria_for_report"
            android:theme="@style/SecondAppTheme"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>